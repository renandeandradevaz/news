<% if @query.present? or @categoria.present? %>
    <% if @pagina == 1 %>
        $('#noticias').empty();
    <% end %>
<% end %>

<% if @query.present? %>
    $('.query').val('<%= @query %>');
<% end %>

$('#noticias').append("<%= escape_javascript(render :partial => 'noticias' ) %>");

$('.pagina').val('<%= @pagina.to_i + 1 %>');