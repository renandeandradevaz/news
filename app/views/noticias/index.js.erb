<% if @query.present? %>

    <% if @pagina == 1 %>
        $('#noticias').empty();
    <% end %>

    $('.query').each(function () {
        $(this).val('<%= @query %>');
    });
<% end %>

<% @noticias.each do |noticia| %>
    if ($('#<%= noticia.url %>').length == 0) {
        $('#noticias').append("<h2 id='<%= noticia.url %>'> <a href='noticias/<%= noticia.url %>'>  <%= noticia.titulo %> </a> </h2>");
    }
<% end %>

$('.pagina').each(function () {
    $(this).val('<%= @pagina.to_i + 1 %>');
});